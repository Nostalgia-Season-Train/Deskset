{
  "author": "旧日丨四季列车",
  "version": "v0.0.1",
  "descript": "以 HHmm 格式，显示现在时间",
  "model": {
    "time_color": {
      "type": "rgba",
      "default": "#FFFFFFF0"
    },
    "date_color": {
      "type": "rgba",
      "default": "#FFFFFFA0"
    },
    "clock_type": {
      "type": "str",
      "default": "digital-clock"
    }
  },
  "option": {
    "items": [{
      "key": "time_color",
      "input": "rgba",
      "name": "时间文字颜色"
    }, {
      "key": "date_color",
      "input": "rgba",
      "name": "日期文字颜色"
    }, {
      "key": "clock_type",
      "input": "select",
      "parameter": {
        "choices": [{
          "value": "digital-clock",
          "label": "Digital Clock"
        }, {
          "value": "round-clock",
          "label": "Round Clock"
        }, {
          "value": "flip-clock",
          "label": "Flip Clock"
        }]
      },
      "name": "时钟样式"
    }],
    "tabs": []
  }
}
