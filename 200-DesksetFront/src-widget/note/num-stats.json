{
  "author": "旧日丨四季列车",
  "version": "v0.0.1",
  "descript": "通过条件过滤笔记后统计数量，双击随机打开其中一篇笔记",
  "model": {
    "title": {
      "type": "str",
      "default": "文件数"
    },
    "titleColor": {
      "type": "rgba",
      "default": "#000000FF"
    },
    "numberColor": {
      "type": "rgba",
      "default": "#000000FF"
    },
    "filterGroup": {
      "type": "noteFilter",
      "default": {
        "match": "all",
        "filters": []
      }
    },
    "width": {
      "type": "num",
      "default": 200
    },
    "height": {
      "type": "num",
      "default": 100
    },
    "backgroundColor": {
      "type": "rgba",
      "default": "#FFFFFFFF"
    }
  },
  "option": {
    "items": [],
    "tabs": [{
      "id": "base",
      "text": "基础",
      "items": [{
        "key": "title",
        "input": "Input",
        "name": "标题（可以插入 Emoji 表情）"
      }, {
        "key": "titleColor",
        "input": "ColorPicker",
        "name": "标题颜色"
      }, {
        "key": "numberColor",
        "input": "ColorPicker",
        "name": "数字颜色"
      }]
    }, {
      "id": "filter",
      "text": "筛选",
      "items": [{
        "key": "filterGroup",
        "input": "NoteFilter",
        "name": "笔记过滤"
      }]
    }, {
      "id": "style",
      "text": "样式",
      "items": [{
        "key": "width",
        "input": "InputNumber",
        "name": "宽度"
      }, {
        "key": "height",
        "input": "InputNumber",
        "name": "高度"
      }, {
        "key": "backgroundColor",
        "input": "ColorPicker",
        "name": "背景颜色"
      }]
    }]
  }
}
