{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* 路径别名 */
    "baseUrl": "./",
    "paths": {
      "#element-plus/*": ["src-component/element-plus/*"],
      "#shadcn/*": ["src-component/shadcn/*"],
      "#desksetui/*": ["src-component/desksetui/*"],
      "#manager/*": ["src-manager/*"]
    },

    /* Vite 类型声明 */
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src-*/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
