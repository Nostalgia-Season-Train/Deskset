{
  "editor.editContext": false,  // 关掉，影响输入法选字框
  "editor.detectIndentation": false,
  "[javascript]": {
    "editor.tabSize": 2,
  },
  "[typescript]": {
    "editor.tabSize": 2,
  },
  "[css]": {
    "editor.tabSize": 2,
  },
  "[less]": {
    "editor.tabSize": 2,
  },
  "[vue]": {
    "editor.tabSize": 2,
    "editor.hover.enabled": "off",
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  "[json]": {
    "editor.tabSize": 2,
  },
}
